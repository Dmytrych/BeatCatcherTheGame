<Window x:Class="BeatCatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeatCatcher"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized"
        Background="Black">
    <Window.Resources>
        <Style TargetType="Button" x:Key="Wid">
            <Setter Property="Width" Value="200" />
            <Setter Property="Margin" Value="200" />
        </Style>
    </Window.Resources>
    <Grid x:Name="mainGrid">
        <Button x:Name="StartButton" FontFamily="./#Xirod"
                MinHeight="30" MinWidth="140" 
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Click="StartButton_Click">Start Game</Button>
    </Grid>
</Window>
