<Window x:Class="BeatCatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeatCatcher"
        mc:Ignorable="d" ResizeMode="NoResize" Width="1900" Height="1080"
        Title="MainWindow">
    <Window.Background>
        <ImageBrush ImageSource="Background.png"/>
    </Window.Background>
    <Grid x:Name="mainGrid" Margin="0,0,0,0">
        <Button x:Name="StartButton" FontFamily="./#Xirod"
                MinHeight="30" MinWidth="140" 
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Background="Black" Foreground="Aqua"
                Click="StartButton_Click">Start Game</Button>
    </Grid>
</Window>
